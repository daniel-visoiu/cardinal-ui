{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "cardinal-core/*": [
        "cardinal-core/src/*",
      ],
      "@libs/*": [
        "src/libs/*"
      ]
    },
    // "allowJs": true,
    // "traceResolution": true
  },
  "include": [
    "src",
    "assets",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "src/libs",
    "node_modules"
  ]
}
