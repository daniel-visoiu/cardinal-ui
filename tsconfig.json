{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "@cardinal-core-declarations": ["./cardinal-core/dist/types/decorators/declarations/declarations"],
      "@libs/*": ["src/libs/*"],
      "@events/*": ["src/events/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["./cardinal-core/dist/types"]
  },
  "include": ["src", "assets", "types/jsx.d.ts"],
  "exclude": ["src/libs", "node_modules"]
}
